[user]
  name = Hong Shick Pak
  email = hong@hspak.com

[credential]
  helper = cache --timeout=3600

[alias]
  st = status
  co = checkout
  br = branch
  ci = commit
  unstage = reset HEAD --
  last = log -1 HEAD
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  bc = cherry -v master
  brdel = "!f() { git br -d $1 && git push origin --delete $1; }; f"
  yolo = !git commit --amend -C@ && git push --force
  gpr = !git pull -r
  grm = !git rebase master
  gcm = !git checkout master

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  grep = yes

[merge]
  tool = vimdiff
  log = true

[help]
  autocorrect = 1

[log]
  decorate = full
[core]
  editor = vim
[sendemail]
  smtpencryption = tls
  smtpserver = mail.messagingengine.com
  smtpuser = hspak@fastmail.com
  smtpserverport = 587
	suppresscc = author
