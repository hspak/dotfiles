#
# .zalias: sourced by .bashrc and .zshrc
#

# -- Admin tasks
alias ls='ls -lh --color'
alias df='df -h'
alias du='du -h'
alias ..='cd ..'
alias ....='cd ../..'
alias grep='grep --color'
alias reboot='systemctl reboot'
alias shutdown='systemctl poweroff'

# -- 1 line Commands
alias sprunge='curl -F "sprunge=<-" http://sprunge.us'
alias scrompbox='scrot -s '"'"'%Y%m%d.png'"'"' -e '"'"'ompload $f && mv $f ~/bridge/image/screeny/'"'"''
alias scromp='scrot '"'"'%Y%m%d.png'"'"' -e '"'"'ompload $f && mv $f ~/bridge/image/screeny/'"'"''
alias aurvote='aurvote -v $(pacman -Qqm)'
alias lap_mon_on='xrandr --output LVDS1 --mode 1600x900 --right-of HDMI1 --output HDMI1 --primary'
alias chromium='chromium --ignore-gpu-blacklist'
alias tmux='tmux -2'

# -- Type less
alias v='vim'
alias sv='sudo -e'
alias ncm='ncmpcpp'
alias snet='sudo netcfg'
alias xresources='xrdb -merge ~/.Xresources'
alias xmap='xmodmap ~/.Xmodmap'
alias dtella='python2 ~/dtella/dtella.py'
alias pa='pacaur'
alias clear_pkg_dir='sudo rm -rf pkg src && sudo rm -f *.gz'

# -- Pacman
alias p='pacman'
alias sp='sudo pacman'
alias pacman='pacman'
alias pii='pacman -Qii'
alias psyu='pacaur -Syu'
alias prsn='sudo pacman -Rsn'
alias pas='sudo pacman -S'
alias pss='sudo pacman -Ss'
alias pqs='pacman -Qs'
alias pu='sudo pacman -U'
alias pqe='pacman -Qe'
alias pcnt='pacman -Q | wc -l'

alias stream='ffmpeg -f alsa -ac 2 -i pulse -f x11grab -r 30 -s 1920x1080 -i $DISPLAY -vcodec libx264 -threads 0'

alias -s png=feh
alias -s jpg=feh
alias -s gif=feh
alias -s GIF=feh
alias -s JPG=feh
alias -s PNG=feh
alias -s gz='tar -xzvf'
alias -s bz2='tar -xjvf'

# vim: set syn=sh :
