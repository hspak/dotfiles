  # reload the configuration file
  bindsym $mod+Shift+C      reload

  # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
  bindsym $mod+Shift+R      restart

  # exit i3 (logs you out of your X session)
  bindsym $mod+Shift+E      exit

  # scratchpad
  bindsym $mod+Shift+minus  move scratchpad
  bindsym $mod+minus        [instance="scratchpad"] scratchpad show
  bindsym $mod+plus         scratchpad show
  bindsym $mod+m            [instance="nautilus"] scratchpad show
  bindsym $mod+n            [instance="ncmpcpp"] scratchpad show
  bindsym $mod+b            [instance="ranger"] scratchpad show
  bindsym $mod+t            [instance="tasks_ws"] scratchpad show
  bindsym $mod+y            [class="Spotify"] scratchpad show

