  # volume control
  bindsym XF86_AudioRaiseVolume exec /home/hsp/bin/ponyvol increase
  bindsym XF86_AudioLowerVolume exec /home/hsp/bin/ponyvol decrease
  bindsym XF86_AudioMute        exec /home/hsp/bin/ponyvol toggle

  # MPD control
  bindsym $mod+F1               exec mpc prev
  bindsym $mod+F2               exec mpc toggle
