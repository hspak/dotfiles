#!/bin/bash

lvl=$(cat /sys/class/backlight/acpi_video0/brightness)
slvl=$lvl
max=15
cnt=0
bar=""

get_bar() {
  while [[ $lvl -gt 0 ]]; do
    let lvl--
    let cnt++
    bar="$bar▣"
  done

  while [[ $cnt -lt $max ]]; do
    let cnt++
    bar="$bar▢"
  done
  echo "$bar  $slvl/$max"
}


dunstify -r 2 "Backlight" "$(get_bar)"
