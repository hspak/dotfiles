#!/usr/bin/env python2

import pynotify
import sys


(appname, summary, body) = ("", "", "")
try:
    appname = sys.argv[1]
    summary = sys.argv[2]
    body = sys.argv[3] + "%"
    id = sys.argv[4]
except:
    pass

pynotify.init(appname)
n = pynotify.Notification(summary, body)
n.props.id = int(id)
n.show()
