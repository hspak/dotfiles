#!/bin/bash

vol_increm=5

toggle() {
  ponymix is-muted
  if [[ $? -ne 0 ]]; then
    ponymix mute >/dev/null
    echo 0
  else
    echo $(ponymix unmute)
  fi
}

increase() {
  ponymix unmute &> /dev/null
  echo $(ponymix increase $vol_increm)
}

decrease() {
  ponymix unmute &> /dev/null
  echo $(ponymix decrease $vol_increm)
}

ponymix >/dev/null || exit 1

action=$1
type -t $action >/dev/null || exit 1

[[ $# -eq 1 ]] && dunst_notify "volume"  "Volume:" $($action) 100

