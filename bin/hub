#!/bin/bash

if [[ $# -lt 2 ]]; then
  echo "usage: hub <user> <repo> [dir]"
  exit 1
fi

which git &>/dev/null
[[ $? ]] || (echo "hub requires git" && exit 1)


git clone "https://$1@github.com/$1/$2" $3
(( $? != 0 )) && git clone "https://github.com/$1/$2" $3

# try bitbucket if that failed
(( $? != 0 )) && git clone "https://$1@bitbucket.org/$1/$2" $3
(( $? != 0 )) && git clone "https://bitbucket.org/$1/$2" $3
