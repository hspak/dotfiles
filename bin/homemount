#!/bin/bash

read -sp 'Purdue Password: ' pass
echo ""
sudo mount -t cifs //offcampus.ics.purdue.edu/hpak /home/hsp/hpak -o user=hpak,password=$pass,_netdev

if [[ "$(cat /home/hsp/hpak/.online)" == "1" ]]; then
	sudo rsync -Par /home/hsp/bridge/school/ /home/hsp/hpak/school/
	sudo rsync -Par /home/hsp/hpak/school/ /home/hsp/bridge/school/ 
else
	echo "Wrong Password"
fi
