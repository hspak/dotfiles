#!/usr/bin/env python

import notify2
from sys import argv

dep_apps = {
    "backlight" :1,
    "volume"    :2,
}

appname = argv[1]
summary = argv[2]
body = argv[3]
id = dep_apps[appname] if appname in dep_apps else 0

try:
    val = float(argv[3])/int(argv[4])*100.0
    body = str(int(val))+"%"
except:
    pass

notify2.init(appname)
n = notify2.Notification(summary, body)
n.id = int(id)
n.timeout = 30
n.show()
