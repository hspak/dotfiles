#!/bin/bash

all_thres=10
inbox_thres=1

while true; do
  all=$(ls ~/Mail/GMail/archive/new | grep HSP-ARCH | wc -l)
  inbox=$(ls ~/Mail/GMail/INBOX/new | grep HSP-ARCH | wc -l) 

  if [ $all -gt $all_thres -o $inbox -gt $inbox_thres ];  then
      notify-send "Mail" " ${inbox} (${all}) new mail" \
        -i "notification-message-email" \
        -t 1000
  fi
  sleep 10m
done
