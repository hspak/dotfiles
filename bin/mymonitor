#!/bin/bash
#
# mymonitor: detects external monitor, starts conky, sets wallpaper
#

# -- Detect External Monitor
VGA=`xrandr | grep "VGA1 connected"`
HDMI=`xrandr | grep "HDMI1 connected"`

if [ "${HDMI}" != "" ]; then
	# xrandr --output LVDS1 --pos 1920x0
	# xrandr --output VGA1 --pos 0x1080 --mode 1920x1080
    xrandr --output LVDS1 --off --output VGA1 --off --output HDMI1 --mode 1920x1080 --pos 0x0 
    # xrandr --output HDMI1 --mode 1920x1080 --pos 0x0 --output LVDS1 --mode 1600x900 --pos 1920x0
elif [ "${VGA}" != "" ]; then
    xrandr --output VGA1 --mode 1920x1080 --pos 0x0 --output LVDS1 --off
    # xrandr --output VGA1 --mode 1920x1080 --pos 0x0 --output LVDS1 --mode 1600x900 --pos 1920x0
else
    xrandr --auto
fi
