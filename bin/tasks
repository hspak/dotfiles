#!/bin/bash

list=$(ps -u | awk '{print $12'})
spawn=1
for item in $list; do
  if [[ $item = "--name=tasks_ws" ]]; then
    spawn=0;
  fi
done

if (( spawn == 1 )); then
  termite --name="tasks_ws" --geometry=798x440+0+800 &
  termite --name="tasks_ws" --geometry=798x440+800-779 &
  termite --name="tasks_ws" --geometry=798x438+800-21 &
  termite --name="tasks_ws" --geometry=798x438+0-21 &
else
  echo "error: task_ws instance already exists"
fi
exit 0
