call sign_define("LspDiagnosticSignInformation", {"text" : "ðŸ’©", "texthl" : "LspDiagnosticsInformation"})
call sign_define("LspDiagnosticSignHint", {"text" : "ðŸ’©", "texthl" : "LspDiagnosticsHint"})

