# -- Admin tasks
alias ls='ls -lhv --color --group-directories-first'
alias df='df -h'
alias du='du -h'
alias ..='cd ..'
alias ....='cd ../..'
alias ......='cd ../../..'
alias ........='cd ../../../..'
alias grep='grep --color'

# -- Type less
alias v='nvim'
alias c='cargo'
alias sctl='systemctl'

