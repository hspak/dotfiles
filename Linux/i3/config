  # resize window (you can also use the mouse for that)
  mode "resize" {
    # Driection to grow
    bindsym l       resize grow   right 5 px or 5 ppt
    bindsym h       resize grow   left  5 px or 5 ppt
    bindsym k       resize grow   up    5 px or 5 ppt
    bindsym j       resize grow   down  5 px or 5 ppt

    # Shift direction to shrink
    bindsym Shift+L resize shrink left  5 px or 5 ppt
    bindsym Shift+H resize shrink right 5 px or 5 ppt
    bindsym ShiftK  resize shrink down  5 px or 5 ppt
    bindsym Shift+J resize shrink up    5 px or 5 ppt

    # Exit resize mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
  }
  # Enter resize bindsym $mod+r mode "resize"
  bindsym $mod+r mode "resize"

  #Create Log out, Reboot, Poweroff bindings
  mode "Exit --> (L)ogout -- (R)eboot -- (P)oweroff"{
    bindsym $mod+r exec systemctl reboot
    bindsym $mod+l exec gnome-session-quit --logout
    bindsym $mod+p exec gnome-session-quit --power-off

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
  }
  bindsym $mod+Shift+e mode "Exit --> (L)ogout -- (R)eboot -- (P)oweroff"

  mode "Sound: (-/+)" {
    bindsym $mod+equal exec dvol increase
    bindsym $mod+minus exec dvol decrease
    bindsym $mod+t exec dvol toggle

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }
  bindsym $mod+Shift+s mode "Sound: (-/+)"

