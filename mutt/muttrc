# imap
set mbox_type       = Maildir         # mailbox type
set imap_user       = $my_user
set imap_pass       = $my_pass
set folder          = "imaps://$my_server"
set spoolfile       = "=INBOX"
set postponed       = "=INBOX.Drafts"

# going through fastmail, setting this will save the email twice
set unset record

# smtp
set smtp_pass = $my_pass
set smtp_url = smtp://$my_user@$my_smtp_server:587/
set ssl_starttls = yes

set realname = "Hong Shick Pak"
set from = hong@hspak.com
set use_from = yes

source ~/.mutt/general.muttrc
source ~/.mutt/colors.muttrc
source ~/.mutt/bindings.muttrc
